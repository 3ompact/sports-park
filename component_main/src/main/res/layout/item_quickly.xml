<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/quickly_iamgeview_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_two_quickly_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_one_quickly_item"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_quickly_imageview_backgroud"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_one_quickly_item"
        app:layout_constraintBottom_toTopOf="@id/iv_thr_quickly_item"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/iv_two_quickly_item"
        android:layout_marginLeft="4dp"
        android:background="@drawable/shape_quickly_imageview_backgroud"

        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/iv_one_quickly_item"
        app:layout_constraintLeft_toLeftOf="@id/iv_two_quickly_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_thr_quickly_item"
        app:layout_constraintTop_toBottomOf="@id/iv_two_quickly_item"
        android:background="@drawable/shape_quickly_imageview_backgroud"


        />



</androidx.constraintlayout.widget.ConstraintLayout>