<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_bar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_searchbar_layout_backgroud"


    >

    <ImageView

        android:layout_width="@dimen/search_bar_iv_and_et_height"
        android:layout_height="@dimen/search_bar_iv_and_et_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:id="@+id/iv_searchbar_item"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_search"
        android:layout_marginLeft="@dimen/d22"

        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/search_bar_iv_and_et_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_searchbar_item"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sb_searchbar_item"
        android:layout_marginRight="@dimen/d30"
        android:gravity="center_vertical"
        android:background="@color/searchbar_backgroud_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/search_bar_textsize"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_searchbar_item"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_bar_iv_and_et_height"
        android:id="@+id/tv_searchbar_item"
        android:hint="请输入搜索内容"
        android:gravity="center_vertical"
        android:background="@color/searchbar_backgroud_color"
        android:textSize="@dimen/search_bar_textsize"
        android:layout_marginRight="@dimen/d30"

        />


</androidx.constraintlayout.widget.ConstraintLayout>